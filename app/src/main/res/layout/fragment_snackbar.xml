<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbarStyle="outsideOverlay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <cn.whereyougo.mdlibrary.widget.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile Snackbar"
            app:v_styleId="@array/text_title"/>

        <cn.whereyougo.mdlibrary.widget.Button
            android:id="@+id/snackbar_bt_mobile_single"
            android:layout_width="128dp"
            android:layout_height="36dp"
            android:gravity="center"
            android:text="SINGLE LINE"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"
            android:textColor="#FF000000"
            app:v_styleId="@array/button_raise"/>

        <cn.whereyougo.mdlibrary.widget.Button
            android:id="@+id/snackbar_bt_mobile_multi"
            android:layout_width="128dp"
            android:layout_height="36dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="MULTI LINE"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"
            android:textColor="#FF000000"
            app:v_styleId="@array/button_raise"/>

        <cn.whereyougo.mdlibrary.widget.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tablet Snackbar"
            app:v_styleId="@array/text_title"/>

        <cn.whereyougo.mdlibrary.widget.Button
            android:id="@+id/snackbar_bt_tablet_single"
            android:layout_width="128dp"
            android:layout_height="36dp"
            android:gravity="center"
            android:text="SINGLE LINE"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"
            android:textColor="#FF000000"
            app:v_styleId="@array/button_raise"/>

        <cn.whereyougo.mdlibrary.widget.Button
            android:id="@+id/snackbar_bt_tablet_multi"
            android:layout_width="128dp"
            android:layout_height="36dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="MULTI LINE"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"
            android:textColor="#FF000000"
            app:v_styleId="@array/button_raise"/>

    </LinearLayout>


</ScrollView>
    
