<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbarStyle="outsideOverlay">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <cn.whereyougo.mdlibrary.widget.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continuous"
            app:v_styleId="@array/text_title"/>

        <cn.whereyougo.mdlibrary.widget.Slider
            android:id="@+id/slider_sl_continuous"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            app:sl_value="50"
            app:v_styleId="@array/slider"/>

        <cn.whereyougo.mdlibrary.widget.TextView
            android:id="@+id/slider_tv_continuous"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:v_styleId="@array/text_body"/>

        <cn.whereyougo.mdlibrary.widget.Slider
            android:id="@+id/slider_sl_continuous_disable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:gravity="center"
            android:padding="16dp"
            app:v_styleId="@array/slider"/>

        <cn.whereyougo.mdlibrary.widget.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Discrete"
            app:v_styleId="@array/text_title"/>

        <cn.whereyougo.mdlibrary.widget.Slider
            android:id="@+id/slider_sl_discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            app:sl_value="50"
            app:v_styleId="@array/slider_discrete"/>

        <cn.whereyougo.mdlibrary.widget.TextView
            android:id="@+id/slider_tv_discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:v_styleId="@array/text_body"/>

        <cn.whereyougo.mdlibrary.widget.Slider
            android:id="@+id/slider_sl_discrete_disable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:gravity="center"
            android:padding="16dp"
            app:sl_value="50"
            app:v_styleId="@array/slider_discrete"/>
    </LinearLayout>

</ScrollView>